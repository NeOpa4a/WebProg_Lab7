@import "reset.css"

body
  max-width 900px
  min-width 300px
  width 100%
  display flex
  flex-direction column
  gap 10px
  margin 0 auto
  padding 20px
  background linear-gradient(45deg, #88eb5d, #60a3db)
  background-size 300% 400%
  font-family "Arial", sans-serif

div
  margin-bottom 10px

h1
  font-size 24px

.schedule
  margin-top 20px

table
  width 100%
  border-collapse collapse
  margin-top 10px

table, th, td
  border 1px solid #000

th, td
  padding 10px
  text-align left
  background-color #ccc

td
  height 50px
  background-color whitesmoke

footer
  margin-top 40px
  font-size 12px
  color #555

footer a
  color #0000ee
  text-decoration none

footer a:hover
  text-decoration underline

.gallery
  display grid
  grid-template-columns repeat(2, 1fr)
  gap 20px
  margin-top 20px

.gallery-item
  text-align center

.gallery-item img
  width 200px
  height 100px
  object-fit cover

.caption
  margin-top 5px
  font-size 14px

.photo
  width 200px
  height 200px
  object-fit cover

/* Стилі для повідомлення в IE */
.ie-message
  display none
  background-color #f8d7da
  color #721c24
  padding 10px
  text-align center
  font-size 14px
 
/* Медіа-запити для адаптації */

/* 1. Контент змінює ширину на 90% і центрується при менших екранах */
@media (max-width: 900px)
  body
    width 90%
    margin 0 auto

/* 2. Перетворення горизонтального меню на вертикальне */
@media (max-width: 768px)
  header ul {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  header ul li
    width 100%
    text-align center
    padding 10px 0

  header
    height auto /* Автоматична висота шапки */
    padding: 20px;

/* 3. Відображення повідомлення для Internet Explorer 10 та нижче */
@media all and (-ms-high-contrast: none), (-ms-high-contrast: active)
  .ie-message
    display block
